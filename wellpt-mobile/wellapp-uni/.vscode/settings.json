{
  "html.suggest.html5": true,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.html": "html",
    "*.nj": "njk",
    "*.njk": "njk"
  },
  "emmet.includeLanguages": { "njk": "html", "nj": "html" },
  "vsicons.associations.files": [{ "icon": "nunjucks", "extensions": ["nj", "njk", "html"], "format": "svg" }],
  "cSpell.words": [
    "CKEDITOR",
    "Treegrid",
    "bootbox",
    "cardgrid",
    "cascader",
    "ckedit",
    "clazz",
    "colspan",
    "desaturate",
    "dingtalk",
    "endfor",
    "fullcalendar",
    "glyphicon",
    "jqgrid",
    "jquery",
    "jsoneditor",
    "layui",
    "lessc",
    "metismenu",
    "mixins",
    "readonly",
    "rowspan",
    "sprintf",
    "subform",
    "welldev",
    "wellpt",
    "ztree"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[njk]": {
    "editor.defaultFormatter": "douglaszaltron.nunjucks-vscode-extensionpack"
  },
  "[nj]": {
    "editor.defaultFormatter": "douglaszaltron.nunjucks-vscode-extensionpack"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 2,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "#fff",
      "background": "#ffab00",
      "icon": "check"
    },
    "FIXME": {
      "foreground": "#fff",
      "background": "#ee6492",
      "iconColour": "#ee6492",
      "gutterIcon": true,
      "type": "line"
    }
  }
}
