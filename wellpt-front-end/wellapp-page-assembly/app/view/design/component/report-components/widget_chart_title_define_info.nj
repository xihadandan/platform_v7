<!-- 图表标题信息定义 -->

<div
  role="tabpanel"
  class="tab-pane report_type_panel"
  id="widget_chart_title_info"
>
  <div class="form-group">
    <label for="show" class="col-sm-2 control-label">是否显示标题</label>
    <div class="col-sm-10 checkbox-inline">
      <input
        type="checkbox"
        class="form-control w-configurer-option"
        height="34px"
        name="show"
        id="show"
        value="false"
      />
      <label for="show"></label>
    </div>
  </div>
  <fieldset>
    <legend>主标题定义</legend>
    <div class="form-group">
      <label for="text" class="col-sm-2 control-label">主标题</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="text"
          id="text"
        />
      </div>
    </div>
    <div class="form-group">
      <label for="title_textStyle_color" class="col-sm-2 control-label"
        >主标题颜色</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_color"
          id="title_textStyle_color"
        />
      </div>
      <label for="title_textStyle_fontStyle" class="col-sm-2 control-label"
        >主标题字体风格</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_fontStyle"
          id="title_textStyle_fontStyle"
        />
      </div>
    </div>

    <div class="form-group">
      <label for="textStyle_fontFamily" class="col-sm-2 control-label"
        >主标题字体</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_fontFamily"
          id="textStyle_fontFamily"
        />
      </div>
      <label for="title_textStyle_fontWeight" class="col-sm-2 control-label"
        >主标题字体粗细</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_fontWeight"
          id="title_textStyle_fontWeight"
        />
      </div>
    </div>

    <div class="form-group">
      <label for="textStyle_fontSize" class="col-sm-2 control-label"
        >主标题字体大小</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_fontSize"
          id="textStyle_fontSize"
        />
      </div>
      <label for="textStyle_lineHeight" class="col-sm-2 control-label"
        >主标题行高</label
      >
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="textStyle_lineHeight"
          id="textStyle_lineHeight"
        />
      </div>
    </div>
    <div class="form-group">
      <label for="link" class="col-sm-2 control-label">主标题超链接</label>
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="link"
          id="link"
        />
      </div>
      <label for="target" class="col-sm-2 control-label">主标题链接跳转</label>
      <div class="col-sm-4">
        <input
          type="text"
          class="form-control w-configurer-option"
          height="34px"
          name="target"
          id="target"
        />
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>副标题定义</legend>
    <div class="form-group">
      <label for="subtext" class="col-sm-2 control-label">副标题</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control w-configurer-option"
