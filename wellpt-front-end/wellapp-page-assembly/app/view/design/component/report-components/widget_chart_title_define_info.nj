      <input
        type="text"
        class="form-control w-configurer-option"
        height="34px"
        name="textVerticalAlign"
        id="textVerticalAlign"
      />
    </div>
  </div>

  <fieldset>
    <legend>全局标题样式</legend>
    <div class="form-group">
      <label for="padding" class="col-sm-2 control-label">标题内边距</label>
      <div class="col-sm-4">
        <input
